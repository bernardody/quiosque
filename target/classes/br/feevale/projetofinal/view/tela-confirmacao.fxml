<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.feevale.projetofinal.view.TelaConfirmacaoController"
      prefHeight="400.0" prefWidth="450.0"
      spacing="30.0"
      style="-fx-background-color: #ecf0f1;">

    <!-- Ícone de sucesso -->
    <Label text="✓" textFill="#27ae60">
        <font>
            <Font name="System Bold" size="80.0" />
        </font>
    </Label>

    <!-- Mensagem principal -->
    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Pedido Realizado com Sucesso!" style="-fx-font-size: 24; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <Label fx:id="lblNumeroPedido" text="Número do Pedido: #000" style="-fx-font-size: 18;">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </Label>

        <Label fx:id="lblFormaPagamento" text="Forma de Pagamento: ..." style="-fx-font-size: 16; -fx-text-fill: #7f8c8d;" />

        <Label text="Status: PAGO" style="-fx-font-size: 16; -fx-text-fill: #27ae60; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
    </VBox>

    <!-- Mensagem secundária -->
    <Label text="Aguarde, seu pedido está sendo preparado!"
           style="-fx-font-size: 14; -fx-text-fill: #95a5a6; -fx-font-style: italic;"
           wrapText="true" textAlignment="CENTER" />

    <!-- Botões -->
    <VBox spacing="10.0" alignment="CENTER">
        <Button fx:id="btnNovoPedido" text="FAZER NOVO PEDIDO"
                onAction="#onNovoPedido"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                prefWidth="250.0" prefHeight="50.0" />

        <Button fx:id="btnVoltar" text="Voltar para Início"
                onAction="#onVoltar"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14;"
                prefWidth="250.0" prefHeight="40.0" />
    </VBox>

</VBox>