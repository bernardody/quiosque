<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.feevale.projetofinal.view.TelaResumoController"
            prefHeight="600.0" prefWidth="500.0">

    <!-- TOPO -->
    <top>
        <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Resumo do Pedido" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="28.0" />
                </font>
            </Label>
            <Label fx:id="lblNumeroPedido" text="Pedido #000" textFill="#ecf0f1">
                <font>
                    <Font size="16.0" />
                </font>
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </Label>
        </VBox>
    </top>

    <!-- CENTRO: Lista de itens -->
    <center>
        <VBox spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
            <Label text="Itens do Pedido:" style="-fx-font-weight: bold; -fx-font-size: 16;">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                        style="-fx-background-color: transparent;">
                <VBox fx:id="containerItens" spacing="8.0" />
            </ScrollPane>
        </VBox>
    </center>

    <!-- RODAPÉ: Total e botões -->
    <bottom>
        <VBox spacing="15.0" style="-fx-background-color: #34495e; -fx-padding: 20;">

            <Separator style="-fx-background-color: white;" />

            <!-- Total -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="TOTAL:" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotal" text="R$ 0,00" textFill="#2ecc71">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>

            <Separator style="-fx-background-color: white;" />

            <!-- Botões -->
            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="btnVoltar" text="Voltar"
                        onAction="#onVoltar"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14;"
                        prefWidth="200.0" prefHeight="40.0" />

                <Button fx:id="btnRealizarPagamento" text="REALIZAR PAGAMENTO"
                        onAction="#onRealizarPagamento"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"
                        prefWidth="250.0" prefHeight="50.0" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>